platform :ios, '10.2'

project 'HistoriaApp.xcodeproj'

target 'HistoriaApp' do
  use_frameworks!

  # Yaml parsing
  pod 'Yams', '~> 0.3.5'

  # Unzipping files
  pod 'SSZipArchive', '~> 2.0.3'

  # an sqlite library
  pod 'GRDB.swift', '3.2.0'

  # logging
  pod 'XCGLogger', '~> 6.0.4'

  # support for our navigation drawer menu
  pod 'MMDrawerController', '~> 0.5.7'

end
