platform :ios, '10.2'

project 'HistoriaApp.xcodeproj'

target 'HistoriaApp' do
  use_frameworks!

  # Yaml parsing
  pod 'Yams', '~> 1.0.0'

  # Unzipping files
  pod 'SSZipArchive', '~> 2.0.3'

  # an sqlite library
  pod 'GRDB.swift', '2.10.0'

  # logging
  pod 'XCGLogger', '~> 6.0.4'

  # support for our navigation drawer menu
  pod 'MMDrawerController', '~> 0.6.0'

end
